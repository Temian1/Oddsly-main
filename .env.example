# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/oddsly_db?schema=public"

# For SQLite (Development/Prototyping)
# DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# 2FA Configuration
TWO_FA_SERVICE_NAME="Oddsly EV Platform"
TWO_FA_ISSUER="Oddsly"

# API Configuration
API_BASE_URL="https://api.the-odds-api.com/v4"
API_KEY="your-odds-api-key-here"

# Frontend API Configuration
VITE_ODDS_API_KEY="your-odds-api-key-here"
VITE_BACKEND_URL="https://your-backend-api.vercel.app/api"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this-in-production"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@oddsly.com"

# Application Configuration
NODE_ENV="development"
PORT=5000
FRONTEND_URL="https://your-frontend-app.vercel.app"

# Admin Configuration
ADMIN_EMAIL="admin@oddsly.com"
ADMIN_PASSWORD="change-this-secure-password"

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_API_LOGGING=true

# Data Automation
DATA_REFRESH_INTERVAL_MINUTES=30
HIT_RATE_CALCULATION_DAYS=90
MIN_GAMES_FOR_HIT_RATE=10

# Subscription Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."